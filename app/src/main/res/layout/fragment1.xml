<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/ANTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Navn på aktivitet"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EditTextFra1AN"
        android:layout_below="@id/ANTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        ></EditText>

    <TextView
        android:id="@+id/weekTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/EditTextFra1AN"
        android:text="Hvilken hverdag?"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EditTextFra1week"
        android:layout_below="@id/weekTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        ></EditText>

    <Button
        android:id="@+id/buttonFra1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditTextFra1week"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Tilføj aktivitet" ></Button>


</RelativeLayout>