<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/par_layout"
    android:background="#CC32CD32"
    android:layout_marginTop="2dp"
    >



    <TextView
        android:id="@+id/layoutActivityTextView1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Activity name"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/layoutActivitesWeekdayTextView1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="| Weekdays"
        android:layout_toRightOf="@id/layoutActivityTextView1"
        android:layout_centerVertical="true"
        android:textSize="17dp"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/mainRCVCheckbox"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/layoutActivitesWeekdayTextView1"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"/>





</RelativeLayout>